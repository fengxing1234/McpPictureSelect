<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="album.element.color">@android:color/white</item>
        <item name="bottomToolbar.bg">@color/bottom_toolbar_bg</item>
        <item name="bottomToolbar.preview.textColor">@color/bottom_toolbar_preview</item>
        <item name="bottomToolbar.apply.textColor">@color/bottom_toolbar_apple</item>
        <item name="album.emptyView">@drawable/ic_empty_zhihu</item>
        <item name="album.emptyView.textColor">@color/album_empty_view</item>
        <item name="album.dropdown.title.color">@color/album_dropdown_title_text</item>
        <item name="album.dropdown.count.color">@color/album_dropdown_count_text</item>
        <item name="listPopupWindowStyle">@style/ListPopup</item>
    </style>

    <style name="ListPopup" parent="Widget.AppCompat.Light.ListPopupWindow">
        <item name="android:popupBackground">@color/album_popup_bg</item>
    </style>

</resources>
